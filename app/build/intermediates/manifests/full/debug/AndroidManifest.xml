<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iha.group2.dronecontrol"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.iha.group2.dronecontrol.InitActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="broadcast" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="com.iha.group2.dronecontrol.UDPconnection"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name="com.iha.group2.dronecontrol.DroneControl"
            android:label="@string/title_activity_drone_control" >
            android:screenOrientation="landscape" >
        </activity>

        <provider
            android:name="com.iha.group2.dronecontrol.SQL_IP_Data_Base"
            android:authorities="com.example.group13.provider.IPs"
            android:enabled="true"
            android:exported="true" >
        </provider>

        <uses-library
            android:name="com.google.android.wearable"
            android:required="false" />

        <activity
            android:name="com.iha.group2.dronecontrol.ListIPs"
            android:label="@string/title_activity_list_ips"
            android:theme="@android:style/Theme.DeviceDefault.Light" >
        </activity>
    </application>

</manifest>