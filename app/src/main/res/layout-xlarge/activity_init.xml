<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".InitActivity"
    android:background="#ffffff">

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/ip_field"
        android:hint="@string/hint_ip"
        android:background="@null"
        android:textSize="40sp"
        android:layout_marginTop="139dp"
        android:gravity="center_horizontal"
        android:layout_marginLeft="60dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/connect_button"
        android:id="@+id/button_con"
        android:textColor="#ffffff"
        android:background="@drawable/connect"
        android:textSize="30sp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="180dp"
        android:layout_below="@+id/ip_field"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/on_button"
        android:id="@+id/button_on"
        android:textColor="#ffffff"
        android:background="@drawable/on"
        android:textSize="30sp"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/button_con"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="40dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/data_button"
        android:id="@+id/button_data"
        android:textColor="#ffffff"
        android:background="@drawable/data"
        android:layout_alignParentBottom="false"
        android:textSize="30sp"
        android:layout_below="@+id/button_on"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="40dp" />

    <WebView
        android:layout_width="456dp"
        android:layout_height="270dp"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:id="@+id/webView2"
        android:layout_below="@+id/ip_field"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp" />


</RelativeLayout>