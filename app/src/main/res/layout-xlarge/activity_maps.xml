<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity"
    android:id="@+id/map_layout">

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/map"
    tools:context="com.iha.group2.dronecontrol.MapsActivity"
    android:name="com.google.android.gms.maps.SupportMapFragment" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left"
        android:layout_gravity="left|bottom"
        android:layout_marginBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:text="L"
        android:textSize="24sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forward"
        android:layout_above="@+id/left"
        android:layout_toRightOf="@+id/left"
        android:layout_toEndOf="@+id/left"
        android:textSize="24sp"
        android:text="F" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right"
        android:layout_below="@+id/forward"
        android:layout_toRightOf="@+id/forward"
        android:layout_toEndOf="@+id/forward"
        android:text="R"
        android:textSize="24sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backward"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/left"
        android:layout_toEndOf="@+id/left"
        android:text="B"
        android:textSize="24sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/up_bt"
        android:layout_alignTop="@+id/right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="UP"
        android:textSize="24sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:layout_below="@+id/up_bt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="DOWN"
        android:textSize="24sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/streaming"
        android:id="@+id/take_photo"
        android:layout_alignBottom="@+id/down"
        android:layout_centerHorizontal="true"
        android:textSize="24sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:id="@+id/save_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:onClick="less_velocity"
        android:id="@+id/less_button"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/save_button"
        android:textSize="24sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/more_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textSize="24sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RL"
        android:id="@+id/rotate_left_bt"
        android:layout_above="@+id/left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RR"
        android:id="@+id/rotate_right_bt"
        android:layout_alignTop="@+id/forward"
        android:layout_toRightOf="@+id/right"
        android:layout_toEndOf="@+id/right"
        android:textSize="24sp" />
</RelativeLayout>