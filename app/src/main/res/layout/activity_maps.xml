<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity"
    android:id="@+id/map_layout"
    android:screenOrientation="landscape"
    >

<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/map"
    tools:context="com.iha.group2.dronecontrol.MapsActivity"
    android:name="com.google.android.gms.maps.SupportMapFragment" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/left"
        android:layout_gravity="left|bottom"
        android:layout_above="@+id/backward"
        android:layout_toRightOf="@+id/save_button"
        android:layout_toEndOf="@+id/save_button"
        android:background="@drawable/left"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forward"
        android:layout_above="@+id/left"
        android:layout_toRightOf="@+id/left"
        android:layout_toEndOf="@+id/left"
        android:background="@drawable/forward"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/right"
        android:layout_above="@+id/backward"
        android:layout_toRightOf="@+id/backward"
        android:layout_toEndOf="@+id/backward"
        android:background="@drawable/right"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backward"

        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/left"
        android:layout_toEndOf="@+id/left"
        android:layout_marginBottom="5dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/up_bt"

        android:background="@drawable/up"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/down"
        android:layout_alignEnd="@+id/down" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/down"
        android:background="@drawable/down"
        android:layout_above="@+id/take_photo"
        android:layout_toLeftOf="@+id/more_button"
        android:layout_toStartOf="@+id/more_button" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/stream"
        android:id="@+id/take_photo"
        android:layout_below="@+id/right"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/save"
        android:id="@+id/save_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/less"
        android:onClick="less_velocity"
        android:id="@+id/less_button"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/left"
        android:layout_alignEnd="@+id/left" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/more"
        android:id="@+id/more_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rleft"
        android:id="@+id/rotate_left_bt"
        android:layout_alignTop="@+id/forward"
        android:layout_alignLeft="@+id/left"
        android:layout_alignStart="@+id/left" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rright"
        android:id="@+id/rotate_right_bt"
        android:layout_alignTop="@+id/forward"
        android:layout_alignRight="@+id/right"
        android:layout_alignEnd="@+id/right" />
</RelativeLayout>