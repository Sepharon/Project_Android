<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".InitActivity">

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ip_field"
        android:hint="@string/hint_ip"
        android:background="@null"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/connect_button"
        android:id="@+id/button_con"
        android:textColor="#ffffff"
        android:background="@drawable/connect"
        android:textSize="25dp"
        android:layout_above="@+id/button_data"
        android:layout_toLeftOf="@+id/ip_field"
        android:layout_toStartOf="@+id/ip_field" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/on_button"
        android:id="@+id/button_on"
        android:textColor="#ffffff"
        android:background="@drawable/on"
        android:textSize="25dp"
        android:layout_alignTop="@+id/button_con"
        android:layout_toRightOf="@+id/ip_field"
        android:layout_toEndOf="@+id/ip_field"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/data_button"
        android:id="@+id/button_data"
        android:textColor="#ffffff"
        android:background="@drawable/data"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
