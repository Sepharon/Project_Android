<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".InitActivity"
    android:background="#ffffff">

    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ip_field"
        android:hint="@string/hint_ip"
        android:background="@null"
        android:imeOptions="actionDone"
        android:layout_alignParentTop="false"
        android:gravity="center_horizontal"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="50dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="@string/connect_button"
        android:id="@+id/button_con"
        android:textColor="#ffffff"
        android:background="@drawable/connect"
        android:textSize="18sp"
        android:layout_below="@+id/ip_field"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="@string/on_button"
        android:id="@+id/button_on"
        android:textColor="#ffffff"
        android:background="@drawable/on"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_below="@+id/button_con"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="@string/data_button"
        android:id="@+id/button_data"
        android:textColor="#ffffff"
        android:background="@drawable/data"
        android:textSize="18sp"
        android:layout_below="@+id/button_on"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp" />

    <WebView
        android:layout_width="210dp"
        android:layout_height="150dp"
        android:id="@+id/webView3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp"
        android:layout_centerInParent="true" />


</RelativeLayout>
