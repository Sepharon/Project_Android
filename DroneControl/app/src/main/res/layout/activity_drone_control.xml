<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.iha.group2.dronecontrol.DroneControl">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forward"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="54dp"
        android:layout_above="@+id/Right"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backward"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/forward"
        android:layout_alignStart="@+id/forward" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Right"
        android:layout_above="@+id/backward"
        android:layout_toRightOf="@+id/forward"
        android:layout_toEndOf="@+id/forward" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Left"
        android:layout_above="@+id/backward"
        android:layout_toLeftOf="@+id/backward"
        android:layout_toStartOf="@+id/backward" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/down_button"
        android:id="@+id/down_button"
        android:layout_below="@+id/Right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/up_button"
        android:id="@+id/up_button"
        android:layout_above="@+id/down_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/down_button"
        android:layout_alignStart="@+id/down_button" />

</RelativeLayout>
